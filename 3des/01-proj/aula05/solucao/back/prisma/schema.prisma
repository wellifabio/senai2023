// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Automoveis {
  id        Int        @id @default(autoincrement())
  modelo    String
  preco     Float
  alocacoes Alocacao[]
}

model Clientes {
  id     Int      @id @default(autoincrement())
  nome   String
  vendas Vendas[]
}

model Concessionaria {
  id        Int        @id @default(autoincrement())
  nome      String
  alocacoes Alocacao[]
  vendas    Vendas[]
}

model Alocacao {
  id               Int            @id @default(autoincrement())
  area             Int
  automovelId      Int
  concessionariaId Int
  automovel        Automoveis     @relation(fields: [automovelId], references: [id])
  concessionaria   Concessionaria @relation(fields: [concessionariaId], references: [id])
  quantidade       Int
  vendas           Vendas[]
}

model Vendas {
  id               Int            @id @default(autoincrement())
  clienteId        Int
  alocacaoId       Int
  concessionariaId Int
  data             DateTime       @default(now())
  cliente          Clientes       @relation(fields: [clienteId], references: [id])
  alocacao         Alocacao       @relation(fields: [alocacaoId], references: [id])
  concessionaria   Concessionaria @relation(fields: [concessionariaId], references: [id])
}
